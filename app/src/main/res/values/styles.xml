<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="HeadLineTextStyle" parent="AppTheme">
        <item name="android:textSize">14dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="HeadLineTextStyleLarge" parent="AppTheme">
        <item name="android:textSize">21dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="SmallTextStyleTab" parent="AppTheme">
        <item name="android:textSize">13dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="SmallTextStyle" parent="AppTheme">
        <item name="android:textSize">10dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MediumTextStyle" parent="AppTheme">
        <item name="android:textSize">16dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MediumTextStyleTab" parent="AppTheme">
        <item name="android:textSize">17dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

</resources>
